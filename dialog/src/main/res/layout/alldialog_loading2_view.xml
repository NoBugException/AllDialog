<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_alldialog_loading2"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/alldialog_loading2_bg"
    android:padding="10dp">

    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:max="10000"
        android:indeterminateDrawable="@drawable/alldialog_progresss_shape"
        android:indeterminate="true"
        android:indeterminateDuration="1200"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="12dp" />


    <TextView android:id="@+id/loading_msg"
        android:text="数据加载中..."
        android:textColor="#7700CE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_gravity="center_vertical" />
</LinearLayout>